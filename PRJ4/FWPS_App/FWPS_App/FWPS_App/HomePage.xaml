<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FWPS_App.HomePage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to FWPS!"
                   FontSize="Large"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <ActivityIndicator x:Name="loadingWheelTM"  VerticalOptions="Center" HorizontalOptions="Center" IsRunning="True" Color="Orange"/>
            <Entry Placeholder="Username" 
                   x:Name="usernameTextBox"/>
            <Entry Placeholder="Password" 
                   IsPassword="True"
                   x:Name="passwordTextBox" Completed="OnLoginButton_Clicked"/>
            <Button Text="Login" 
                    x:Name="OnLoginButton"/>
            <Button Text="Sign Up"
                    x:Name="SignUpButton" />
            <Button Text="About Us"
                    x:Name="AboutUsButton" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>