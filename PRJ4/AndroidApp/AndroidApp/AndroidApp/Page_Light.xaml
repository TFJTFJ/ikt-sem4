<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AndroidApp.Page_Light">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Some text!" 
           TextColor="White"
           VerticalOptions="Center" 
           HorizontalOptions="Center" x:Name="mainlabel"/>
            <Label Text="Some text 2!" 
           TextColor="Black"
           VerticalOptions="Center" 
           HorizontalOptions="Center" x:Name="label2"/>
            <Button Text="Turn light on" HorizontalOptions="CenterAndExpand" x:Name="OnButton" />
            <Button Text="Turn light off" HorizontalOptions="CenterAndExpand" x:Name="OffButton"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>