<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AndroidApp"
             x:Class="FWPS.MainPage"
             BackgroundColor="DeepSkyBlue">

    <StackLayout VerticalOptions="CenterAndExpand"
                 HorizontalOptions="CenterAndExpand">
        <Label Text="Welcome to the FWPS app!" TextColor="White" HorizontalOptions="CenterAndExpand" x:Name="WelcomeAppButton" />
        <Label Text="Enter Username:" TextColor="White" HorizontalOptions="CenterAndExpand" x:Name="UsernameLabel" />
        <Editor x:Name="UsernameEditor" />
        <Label Text="Enter Password:" TextColor="White" HorizontalOptions="CenterAndExpand" x:Name="PassnameLabel" />
        <Editor x:Name="PasswordEditor" />
        <Button Text="Login" HorizontalOptions="CenterAndExpand" x:Name="LoginButton" />
    </StackLayout>

</ContentPage>
